<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/myNutrientsTxt"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="My Nutrients"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myNutrientsMiniTxt"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myNutrientsTxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Your meals this week are lacking these nutrients:\n"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/nutrientsTxt"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myNutrientsTxt"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="Insert Nutrients here..."
        android:textSize="15sp" />

    <TextView
        android:id="@+id/myMealsTxt"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/nutrientsTxt"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"
        android:text="My Meals"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/myMealsMiniTxt"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myMealsTxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Click on the date to see meals and nutrition information for that particular date."
        android:textSize="20sp" />

    <!-- TODO: Make the search accept input -->

    <SearchView
        android:id="@+id/searchView"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/myMealsMiniTxt"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/spinner_border"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/myMealsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/myMealsMiniTxt"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:background="@color/real_grey"/>


</RelativeLayout>