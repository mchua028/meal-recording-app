<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="8dp"
    android:divider="@android:color/transparent"
    android:dividerHeight="0.0px"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardCornerRadius="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/editCaloriesfoodLabel"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Food"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/editCaloriesfoodCalories"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-50dp"
            android:text="XXXX kcal"
            android:textSize="20sp"/>

        <ImageView
            android:id="@+id/editCaloriesRemove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/editCaloriesfoodCalories"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:onClick="editCaloriesRemoveItem"
            android:src="@drawable/baseline_clear_black_18dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>