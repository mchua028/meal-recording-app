<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <Button
            android:id="@+id/chooseImageBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:text="Choose file"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uploadBtn"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/progressBar"
            android:layout_marginBottom="140dp"/>

        <EditText
            android:id="@+id/editTextFileName"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_toEndOf="@id/chooseImageBtn"
            android:layout_toStartOf="@id/uploadBtn"
            android:layout_marginTop="70dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:inputType="none"/>

        <Button
            android:id="@+id/uploadBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true"
            android:text="Upload"/>

        <Button
            android:id="@+id/galleryCountCaloriesBtn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="70dp"
            android:onClick="goToMyMealInformation"
            android:backgroundTint="@color/button_grey"
            android:text="Count My Calories!"
            android:textColor="@color/white" />

    </RelativeLayout>
</RelativeLayout>