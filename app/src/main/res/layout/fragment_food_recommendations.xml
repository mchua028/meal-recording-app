<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--TextView
        android:id="@+id/remainingCaloriesTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="Remaining calories for today:"
        android:textSize="15sp" /-->

    <TextView
        android:id="@+id/foodRecommendationsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:text="Foods containing nutrients that I need:"
        android:textSize="30sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/noFoodToRecommend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foodRecommendationsTxt"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="10dp"
        android:layout_centerHorizontal="true"
        android:text="No meal record found! \Please add food to get recommendations!"
        android:textAlignment="center"
        android:textSize="25sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/foodRecRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/foodRecommendationsTxt"
        android:padding="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:background="@color/real_grey"/>

</RelativeLayout>