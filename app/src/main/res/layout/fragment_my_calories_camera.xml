<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_my_calories_instant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/launchCameraBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:text="Open Camera"/>

    <ImageView
        android:id="@+id/cameraImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/launchCameraBtn"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="140dp"/>

    <Button
        android:id="@+id/cameraCountCaloriesBtn"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="70dp"
        android:onClick="goToMyMealInformation"
        android:backgroundTint="@color/button_grey"
        android:text="Count My Calories!"
        android:textColor="@color/white" />

</RelativeLayout>